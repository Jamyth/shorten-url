{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "lib": ["DOM", "ESNext"],
        "module": "commonjs",
        "target": "ES5",
        "jsx": "react",
        "isolatedModules": true,
        "importsNotUsedAsValues": "preserve",
        "baseUrl": "../src",
        "inlineSources": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": ["../src"]
}